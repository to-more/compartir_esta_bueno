.container
  #node{:class => "form-signin"}
    = form_for(@node) do |f|
      - if @node.errors.any?
        #errorExplanation
          %h2= "#{pluralize(@node.errors.count, 'error')} prohibited this user from being saved:"
          %ul
          - @node.errors.full_messages.each do |msg|
            %li= msg

      %input{ :class=>"form-control", :placeholder=>"Address", :value=> @node.location.address }
      %input{ :class=>"form-control", :placeholder=>"mac", :value=> @node.router.mac }
      %input{ :class=>"form-control", :placeholder=>"essid", :value=> @node.router.essid }
      %input{ :class=>"form-control", :placeholder=>"ip", :value=> @node.location.ip }
      %input{ :class=>"form-control", :placeholder=>"Password", :value=> @node.router.password }
